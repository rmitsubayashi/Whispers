<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/chain_info_chat_item_pending_messages_below"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textSize="13sp"
            android:text="@string/chain_info_chat_pending_messages_below"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:alpha="0.5"
            android:background="@color/gray"
            android:layout_toLeftOf="@id/chain_info_chat_item_pending_messages_below"
            android:layout_toStartOf="@id/chain_info_chat_item_pending_messages_below"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:alpha="0.5"
            android:background="@color/gray"
            android:layout_toRightOf="@id/chain_info_chat_item_pending_messages_below"
            android:layout_toEndOf="@id/chain_info_chat_item_pending_messages_below"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginRight="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="8dp"
        >
        <TextView
            android:id="@+id/chain_info_chat_item_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:elevation="2dp"
            android:layout_margin="2dp"
            android:background="@color/colorAccent"
            android:alpha="0.5"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:textIsSelectable="true"/>

    </RelativeLayout>
</LinearLayout>