<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    android:id="@+id/chain_info_chat_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <RelativeLayout
            android:id="@+id/chain_info_chat_chat_box_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_alignParentBottom="true">
            <Button
                android:id="@+id/chain_info_chat_submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:text="@string/chain_info_chat_send"/>
            <EditText
                android:id="@+id/chain_info_chat_chat_box"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/chain_info_chat_submit"
                android:layout_toStartOf="@id/chain_info_chat_submit"
                android:inputType="text"/>
        </RelativeLayout>
        <View
            android:id="@+id/chain_info_chat_line"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:alpha="0.12"
            android:background="@color/gray"
            android:layout_above="@id/chain_info_chat_chat_box_layout"/>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/chain_info_chat_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:layout_alignParentTop="true"
            android:layout_above="@id/chain_info_chat_line"/>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>