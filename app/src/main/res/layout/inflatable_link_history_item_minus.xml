<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="64dp"
                android:background="@drawable/box_red"
                android:padding="16dp"
    >
    <TextView
        android:id="@+id/link_history_change_in_links"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="34sp"
        android:textColor="@color/red"
        android:text="-100"/>
    <TextView
        android:id="@+id/link_history_transaction_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/link_history_change_in_links"
        android:layout_alignLeft="@id/link_history_change_in_links"
        android:layout_alignStart="@id/link_history_change_in_links"
        android:layout_marginBottom="4dp"
        android:textColor="@color/gray"
        android:textSize="16sp"
        android:text="Today"
        />
    <TextView
        android:id="@+id/link_history_transaction_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/link_history_transaction_date"
        android:layout_alignLeft="@id/link_history_change_in_links"
        android:layout_alignStart="@id/link_history_change_in_links"
        android:textColor="@color/gray"
        android:textSize="16sp"
        android:text="6:30PM"
        />

    <TextView
        android:id="@+id/link_history_transaction_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:textSize="34sp"
        android:text="@string/link_history_transaction_type_learn"
        />

    <!--
    <TextView
        android:id="@+id/link_history_situation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="24dp"
        android:layout_marginEnd="24dp"
        android:layout_below="@id/link_history_transaction_type"
        android:layout_alignLeft="@id/link_history_transaction_type"
        android:layout_alignStart="@id/link_history_transaction_type"
        android:textSize="16sp"
        android:text="A Night at a restaurant"
        />
        -->

</RelativeLayout>