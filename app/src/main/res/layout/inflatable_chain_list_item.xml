<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="92dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:gravity="center_vertical">
    <TextView
        android:id="@+id/chain_list_item_situation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        />
    <TextView
        android:id="@+id/chain_list_item_date_linked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:layout_alignParentRight="true"
        android:layout_alignRight="@id/chain_list_item_situation"
        android:layout_alignEnd="@id/chain_list_item_situation"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"/>
    <LinearLayout
        android:id="@+id/chain_list_item_links"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/chain_list_item_situation"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:weightSum="5"
        android:layout_gravity="center"/>

</RelativeLayout>