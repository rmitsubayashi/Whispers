<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
                      android:orientation="vertical"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:padding="16dp"
                      android:animateLayoutChanges="true"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:textSize="24sp"
                android:text="@string/learn_start_no_chain_title"
                />

            <TextView
                android:id="@+id/learn_start_no_chain_available_situation_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="@string/learn_start_no_chain_suggestion"
                />

            <!--style copied from situation list items-->
            <LinearLayout
                android:id="@+id/learn_start_no_chain_link1"
                  android:orientation="horizontal"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:minHeight="64dp"
                  android:background="@drawable/box_primary"
                  android:elevation="2dp"
                  android:layout_marginBottom="20dp"
                  android:visibility="gone"
                >
                <TextView
                    android:id="@+id/learn_start_no_chain_link1_textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="32dp"
                    android:layout_marginStart="32dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/learn_start_no_chain_link2"
                  android:orientation="horizontal"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:minHeight="64dp"
                  android:background="@drawable/box_accent"
                  android:elevation="2dp"
                  android:layout_marginBottom="20dp"
                  android:visibility="gone"
                >
                <TextView
                    android:id="@+id/learn_start_no_chain_link2_textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="32dp"
                    android:layout_marginStart="32dp"
                />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/learn_start_no_chain_link3"
                  android:orientation="horizontal"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:minHeight="64dp"
                  android:background="@drawable/box_primary"
                  android:elevation="2dp"
                  android:layout_marginBottom="20dp"
                  android:visibility="gone"
                >
                <TextView
                    android:id="@+id/learn_start_no_chain_link3_textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="32dp"
                    android:layout_marginStart="32dp"
                    />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/learn_start_no_chain_refresh"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginEnd="24dp"
        android:src="@drawable/refresh"/>
</RelativeLayout>