<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">
    <ImageView
        android:id="@+id/offline_mode_no_recordings_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:layout_centerVertical="true"
        android:src="@drawable/open_box"/>
    <TextView
        android:id="@+id/offline_mode_no_recordings_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/offline_mode_no_recordings_image"
        android:layout_toEndOf="@id/offline_mode_no_recordings_image"
        android:layout_alignTop="@id/offline_mode_no_recordings_image"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:textSize="24sp"
        android:text="@string/offline_mode_no_recordings_title"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/offline_mode_no_recordings_title"
        android:layout_alignLeft="@id/offline_mode_no_recordings_title"
        android:layout_alignStart="@id/offline_mode_no_recordings_title"
        android:layout_marginTop="48dp"
        android:textSize="20sp"
        android:text="@string/offline_mode_no_recordings_description"
        />


</RelativeLayout>