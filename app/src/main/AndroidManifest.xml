<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.linnca.whispers">

    <uses-permission android:name="android.permission.RECORD_AUDIO"/>
    <uses-permission android:name="com.android.vending.BILLING"/>

    <application
        android:name="com.linnca.whispers.gui.MyApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.linnca.whispers.gui.Splash"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name="com.linnca.whispers.gui.MainActivity"
            android:windowSoftInputMode="stateUnchanged"
            >
        </activity>
        <!-- should create a landscape layout later, but not now -->
        <activity android:name="com.linnca.whispers.gui.LanguageChooser">
        </activity>
        <activity android:name="com.linnca.whispers.gui.OnboardingActivity">
        </activity>
        <activity android:name="com.linnca.whispers.gui.tutorial.Tutorial">
        </activity>
        <activity android:name="com.linnca.whispers.gui.OnboardingActivity2">
        </activity>
    </application>

</manifest>